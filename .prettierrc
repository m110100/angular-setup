{
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"proseWrap": "never",
	"semi": true,
	"quoteProps": "as-needed",
	"endOfLine": "auto",
	"functionParenNewline": false,
	"overrides": [
		{ "files": ["src/**/*.html"], "options": { "parser": "angular" } }
	]
}
